    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8080",
                "--reload",
            ],
        },
        {
            "name": "Debug: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov-report=html:${workspace}/app/tests/htmlcov",
                "-v",
                "-s",
                "-W",
                "ignore::DeprecationWarning",
            ],
        }
    ]
}